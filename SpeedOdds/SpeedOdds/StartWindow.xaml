<Window x:Class="SpeedOdds.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeedOdds"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="SpeedOdds" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Icon="Resources/ImageFiles/Icon/img_icon.ico">
    <Window.Background>
        <ImageBrush ImageSource="Resources/ImageFiles/Background/red-black-wallpaper.jpg"/>
    </Window.Background>
    <Grid>
        <materialDesign:Card Padding="32" Margin="26,24">
            <materialDesign:Card.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}" Opacity="0.3"/>
            </materialDesign:Card.Background>

            <Controls:TransitioningContentControl x:Name="StartContainer" Transition="Right" Margin="-30,-30,-28,-29"/>
            
        </materialDesign:Card>
    </Grid>
</Window>
